{
  "name": "Made in Canada",
  "version": "1.0",
  "description": "A quick and simple extension for identifying when you're on a site that sells Canadian-made goods and services ðŸ‡¨ðŸ‡¦",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "*://arcteryx.com/*",
        "*://www.aritzia.com/*",
        "*://www.canadagoose.com/*",
        "*://collectionarianne.com/*",
        "*://www.crownroyal.com/*",
        "*://www.fortycreekwhisky.com/*",
        "*://www.frankandoak.com/*",
        "*://www.goodyear.ca/*",
        "*://www.herschelsupply.com/*",
        "*://www.lolelife.com/*",
        "*://shop.lululemon.com/*",
        "*://www.mec.ca/*",
        "*://www.michelin.ca/*",
        "*://www.muttonheadstore.com/*",
        "*://www.nakedandfamousdenim.com/*",
        "*://www.paderno.com/*",
        "*://ca.pajar.com/*",
        "*://us.pajar.com/*",
        "*://www.point-zero.com/*",
        "*://www.roots.com/*",
        "*://sabian.com/*",
        "*://canada.sambat.com/*",
        "*://www.sorel.com/*",
        "*://theunbrandedbrand.com/*"
      ],
      "js": ["infobar.js"]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/maple16.png",
      "32": "images/maple32.png",
      "48": "images/maple48.png",
      "128": "images/maple128.png"
    }
  },
  "icons": {
    "16": "images/maple16.png",
    "32": "images/maple32.png",
    "48": "images/maple48.png",
    "128": "images/maple128.png"
  },
  "manifest_version": 2
}
