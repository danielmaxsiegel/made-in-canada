{
  "name": "Made in Canada",
  "version": "0.7",
  "description": "A quick and simple extension for identifying when you're on a site that sells Canadian-made goods and services ðŸ‡¨ðŸ‡¦",
  "permissions": ["contextMenus", "tabs", "activeTab", "declarativeContent", "storage"],
  "content_scripts": [
    {
      "matches": [
        "*://www.canadagoose.com/*",
        "*://collectionarianne.com/*",
        "*://www.crownroyal.com/*",
        "*://www.fortycreekwhisky.com/*",
        "*://www.frankandoak.com/*",
        "*://www.goodyear.ca/*",
        "*://www.michelin.ca/*",
        "*://sabian.com/*"
      ],
      "js": ["infobar.js"]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/maple16.png",
      "32": "images/maple32.png",
      "48": "images/maple48.png",
      "128": "images/maple128.png"
    }
  },
  "icons": {
    "16": "images/maple16.png",
    "32": "images/maple32.png",
    "48": "images/maple48.png",
    "128": "images/maple128.png"
  },
  "manifest_version": 2
}
